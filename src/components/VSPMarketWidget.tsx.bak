import { useEffect, useState } from "react";
import { useAccount, useBalance, useChainId } from "wagmi";
import { ConnectButton } from "@rainbow-me/rainbowkit";
import TradeModal from "./TradeModal";
import { getContracts } from "../contracts";

type MMQuote = {
  buy_usdc: number;
  sell_usdc: number;
};

const USDC_TOKEN_ADDRESS = import.meta.env
  .VITE_USDC_ADDRESS as `0x${string}` | undefined;

export default function VSPMarketWidget() {
  const { address, isConnected } = useAccount();
  const chainId = useChainId();

  const [quote, setQuote] = useState<MMQuote | null>(null);
  const [error, setError] = useState<string | null>(null);
  const [side, setSide] = useState<"buy" | "sell" | null>(null);

  const [vspAddress, setVspAddress] =
    useState<`0x${string}` | null>(null);

  /* --------------------------------------------------
     Load contracts
  -------------------------------------------------- */
  useEffect(() => {
    let alive = true;

    (async () => {
      try {
        const c = await getContracts();
        if (alive && c?.VSPToken) {
          setVspAddress(c.VSPToken as `0x${string}`);
        }
      } catch {
        if (alive) setVspAddress(null);
      }
    })();

    return () => {
      alive = false;
    };
  }, [chainId]);

  /* --------------------------------------------------
     Market-maker quotes
  -------------------------------------------------- */
  useEffect(() => {
    let alive = true;

    async function fetchQuote() {
      try {
        const res = await fetch("/api/mm/quote");
        if (!res.ok) throw new Error(`HTTP ${res.status}`);
        const data = await res.json();

        if (
          typeof data.buy_usdc !== "number" ||
          typeof data.sell_usdc !== "number"
        ) {
          throw new Error("Malformed quote");
        }

        if (alive) {
          setQuote({
            buy_usdc: data.buy_usdc,
            sell_usdc: data.sell_usdc,
          });
          setError(null);
        }
      } catch (e: any) {
        if (alive) setError(e.message ?? "MM error");
      }
    }

    fetchQuote();
    const id = setInterval(fetchQuote, 5000);
    return () => {
      alive = false;
      clearInterval(id);
    };
  }, []);

  /* --------------------------------------------------
     ERC-20 balances ONLY (no native AVAX)
  -------------------------------------------------- */
  const { data: vspBalance } = useBalance({
    address,
    token: vspAddress ?? undefined,
    enabled: Boolean(isConnected && address && vspAddress),
    watch: true,
  });

  const { data: usdcBalance } = useBalance({
    address,
    token: USDC_TOKEN_ADDRESS,
    enabled: Boolean(isConnected && address && USDC_TOKEN_ADDRESS),
    watch: true,
  });

  if (error) {
    return <div className="card error">MM error: {error}</div>;
  }

  if (!quote) {
    return <div className="muted">Loading marketâ€¦</div>;
  }

  return (
    <>
      <div className="card">
        {/* Wallet */}
        <div
          className="row"
          style={{ justifyContent: "space-between", alignItems: "center" }}
        >
          <ConnectButton />
        </div>

        {/* Balances */}
        {isConnected && (
          <div className="row" style={{ marginTop: 8 }}>
            <span className="badge">
              VSP:{" "}
              {vspBalance
                ? Number(vspBalance.formatted).toFixed(4)
                : "0.0000"}
            </span>
            <span className="badge">
              USDC:{" "}
              {usdcBalance
                ? Number(usdcBalance.formatted).toFixed(2)
                : "0.00"}
            </span>
          </div>
        )}

        {/* Actions */}
        <div className="row" style={{ marginTop: 10 }}>
          <button
            className="btn btn-primary"
            disabled={!isConnected || !vspAddress}
            onClick={() => setSide("buy")}
          >
            Buy @ {quote.buy_usdc.toFixed(4)} USDC
          </button>

          <button
            className="btn"
            disabled={!isConnected || !vspAddress}
            onClick={() => setSide("sell")}
          >
            Sell @ {quote.sell_usdc.toFixed(4)} USDC
          </button>
        </div>
      </div>

      {side && address && vspAddress && (
        <TradeModal
          side={side}
          quote={quote}
          walletAddress={address}
          balances={{
            vsp: Number(vspBalance?.formatted ?? 0),
            usdc: Number(usdcBalance?.formatted ?? 0),
          }}
          onClose={() => setSide(null)}
        />
      )}
    </>
  );
}

