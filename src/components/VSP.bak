import { useEffect, useMemo, useState } from "react";
import { useAccount, useBalance, useNetwork } from "wagmi";
import { ConnectButton } from "@rainbow-me/rainbowkit";
import TradeModal from "./TradeModal";
import { getContracts } from "../contracts";

type MMQuote = {
  market_price_usdc?: number;
  buy_usdc: number;
  sell_usdc: number;
};

// Optional USDC address (balances disabled if missing)
const USDC_TOKEN_ADDRESS = import.meta.env
  .VITE_USDC_ADDRESS as `0x${string}` | undefined;

export default function VSPMarketWidget() {
  const [quote, setQuote] = useState<MMQuote | null>(null);
  const [error, setError] = useState<string | null>(null);
  const [side, setSide] = useState<"buy" | "sell" | null>(null);

  const { address, isConnected } = useAccount();
  const { chain } = useNetwork();

  // Resolve contracts only when chain is known
  const contracts = useMemo(() => {
    if (!chain?.id) return null;
    try {
      return getContracts(chain.id);
    } catch {
      return null;
    }
  }, [chain?.id]);

  const VSP_TOKEN_ADDRESS = contracts?.VSPToken as
    | `0x${string}`
    | undefined;

  // ----------------------------
  // MM quote polling
  // ----------------------------
  useEffect(() => {
    let alive = true;

    async function fetchQuote() {
      try {
        const res = await fetch("/api/mm/quote");
        if (!res.ok) throw new Error(`HTTP ${res.status}`);
        const data = await res.json();

        if (
          typeof data.buy_usdc !== "number" ||
          typeof data.sell_usdc !== "number"
        ) {
          throw new Error("Malformed MM quote");
        }

        if (alive) {
          setQuote({
            buy_usdc: data.buy_usdc,
            sell_usdc: data.sell_usdc,
            market_price_usdc:
              typeof data.market_price_usdc === "number"
                ? data.market_price_usdc
                : undefined,
          });
          setError(null);
        }
      } catch (e: any) {
        if (alive) setError(e.message ?? "MM error");
      }
    }

    fetchQuote();
    const id = setInterval(fetchQuote, 5000);
    return () => {
      alive = false;
      clearInterval(id);
    };
  }, []);

  // ----------------------------
  // Wallet balances
  // ----------------------------
  const { data: usdcBalanceData } = useBalance({
    address,
    token: USDC_TOKEN_ADDRESS,
    enabled: Boolean(address && USDC_TOKEN_ADDRESS),
    watch: true,
  });

  const { data: vspBalanceData } = useBalance({
    address,
    token: VSP_TOKEN_ADDRESS,
    enabled: Boolean(address && VSP_TOKEN_ADDRESS),
    watch: true,
  });

  const balances = useMemo(
    () => ({
      usdc: Number(usdcBalanceData?.formatted ?? 0),
      vsp: Number(vspBalanceData?.formatted ?? 0),
    }),
    [usdcBalanceData, vspBalanceData]
  );

  // ----------------------------
  // Rendering
  // ----------------------------
  if (error) {
    return <div className="card error">MM error: {error}</div>;
  }

  if (!quote) {
    return <div className="muted">Loading VSP priceâ€¦</div>;
  }

  const midPrice =
    quote.market_price_usdc && quote.market_price_usdc > 0
      ? quote.market_price_usdc
      : (quote.buy_usdc + quote.sell_usdc) / 2;

  return (
    <>
      <div className="card">
        <div
          className="row"
          style={{ justifyContent: "space-between", alignItems: "center" }}
        >
          <div>
            <strong>VSP</strong>{" "}
            <span className="muted">
              ${midPrice.toFixed(4)} USDC
            </span>
          </div>

          {/* Must never disappear */}
          <ConnectButton />
        </div>

        <div className="row" style={{ marginTop: 8 }}>
          <button
            className="btn btn-primary"
            disabled={!isConnected || !VSP_TOKEN_ADDRESS}
            onClick={() => setSide("buy")}
          >
            Buy @ {quote.buy_usdc.toFixed(4)}
          </button>

          <button
            className="btn"
            disabled={!isConnected || !VSP_TOKEN_ADDRESS}
            onClick={() => setSide("sell")}
          >
            Sell @ {quote.sell_usdc.toFixed(4)}
          </button>
        </div>

        {!contracts && (
          <div className="muted" style={{ marginTop: 8 }}>
            Unsupported network
          </div>
        )}
      </div>

      {side && address && (
        <TradeModal
          side={side}
          quote={quote}
          walletAddress={address}
          balances={balances}
          onClose={() => setSide(null)}
        />
      )}
    </>
  );
}

